<!-- views/cart.ejs -->
<div class="row">
    <div class="col-md-12 mb-4">
        <div class="card bg-warning bg-opacity-10 border-warning">
            <div class="card-body">
                <form action="/cart" method="GET" class="row align-items-center">
                    <div class="col-auto">
                        <label class="fw-bold">ðŸ”‘ Current User ID:</label>
                    </div>
                    <div class="col-auto">
                        <input type="number" name="user_id" class="form-control form-control-lg fw-bold text-center text-primary" value="<%= userId || '' %>" required placeholder="Enter ID...">
                    </div>
                    <div class="col-auto">
                        <button type="submit" class="btn btn-warning">Load My Cart</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<% if (cartItems && cartItems.length > 0) { %>
    <div class="row">
        <!-- Cart Items List -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Shopping Cart (<%= cartItems.length %> items)</h5>
                </div>
                <div class="table-responsive">
                    <table class="table align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Product</th>
                                <th>Variant</th>
                                <th>Price</th>
                                <th>Qty</th>
                                <th>Subtotal</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% let total = 0; %>
                            <% cartItems.forEach(item => { %>
                                <% total += item.subtotal; %>
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img src="<%= item.thumbnail %>" style="width: 50px; height: 50px; object-fit: cover;" class="rounded me-2">
                                            <div>
                                                <h6 class="mb-0"><%= item.product_name %></h6>
                                                <% if(!item.is_active) { %> <span class="badge bg-danger">Not Sold</span> <% } %>
                                            </div>
                                        </div>
                                    </td>
                                    <td><%= item.color %> / <%= item.size %></td>
                                    <td><%= item.price.toLocaleString() %></td>
                                    <td>
                                        <form action="/cart/update" method="POST" class="d-flex" style="width: 120px;">
                                            <input type="hidden" name="user_id" value="<%= userId %>">
                                            <input type="hidden" name="variant_id" value="<%= item.variant_id %>">
                                            <input type="number" name="quantity" class="form-control form-control-sm me-1" value="<%= item.quantity %>" min="1">
                                            <button type="submit" class="btn btn-sm btn-light">ðŸ’¾</button>
                                        </form>
                                    </td>
                                    <td class="fw-bold"><%= item.subtotal.toLocaleString() %></td>
                                    <td>
                                        <form action="/cart/remove" method="POST">
                                            <input type="hidden" name="user_id" value="<%= userId %>">
                                            <input type="hidden" name="variant_id" value="<%= item.variant_id %>">
                                            <button class="btn btn-sm btn-outline-danger">âœ•</button>
                                        </form>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Checkout Box -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Checkout</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-3">
                        <span>Total Items:</span>
                        <strong><%= cartItems.length %></strong>
                    </div>
                    <div class="d-flex justify-content-between mb-4">
                        <span class="h5">Total:</span>
                        <span class="h5 text-danger"><%= total.toLocaleString() %> Ä‘</span>
                    </div>

                    <hr>

                    <form action="/checkout" method="POST">
                         <input type="hidden" name="user_id" value="<%= userId %>">
                         
                         <div class="mb-3">
                            <label class="form-label">Address ID</label>
                            <input type="number" name="address_id" class="form-control" placeholder="Direct Address ID" required>
                            <div class="form-text">Check your addresses in Profile.</div>
                         </div>

                         <div class="mb-3">
                            <label class="form-label">Payment Method ID</label>
                            <select name="payment_method_id" class="form-select">
                                <option value="1">COD (Cash on Delivery)</option>
                                <option value="2">Bank Transfer (VNPAY)</option>
                            </select>
                         </div>

                         <div class="mb-3">
                            <label class="form-label">Voucher ID (Optional)</label>
                            <div class="input-group">
                                <input type="number" name="voucher_id" class="form-control" placeholder="ID from Wallet">
                                <a href="/vouchers?user_id=<%= userId %>" target="_blank" class="btn btn-outline-secondary">Check Wallet</a>
                            </div>
                            <div class="form-text">Check your voucher ID in My Vouchers page.</div>
                         </div>

                         <button type="submit" class="btn btn-success w-100 btn-lg">Place Order</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
<% } else if (userId) { %>
    <div class="alert alert-info text-center py-5">
        <h4>Cart is empty for User ID: <%= userId %></h4>
        <a href="/products" class="btn btn-primary mt-3">Go Shop</a>
    </div>
<% } %>
