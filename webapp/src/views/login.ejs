<!-- views/login.ejs -->
<div class="row justify-content-center">
    <div class="col-md-6">
        <h2 class="text-center mb-4">üîê Auth Portal</h2>
        
        <ul class="nav nav-tabs mb-3" id="authTab" role="tablist">
            <li class="nav-item">
                <button class="nav-link active" id="login-tab" data-bs-toggle="tab" data-bs-target="#login" type="button">Login</button>
            </li>
            <li class="nav-item">
                <button class="nav-link" id="register-tab" data-bs-toggle="tab" data-bs-target="#register" type="button">Register</button>
            </li>
            <li class="nav-item">
                <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button">Update Profile</button>
            </li>
        </ul>

        <div class="tab-content" id="authTabContent">
            <!-- Login Form -->
            <div class="tab-pane fade show active" id="login">
                <div class="card p-4">
                    <form action="/login" method="POST">
                        <div class="mb-3">
                            <label>Email</label>
                            <input type="email" name="email" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label>Password</label>
                            <input type="password" name="password" class="form-control" required>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Login (Get ID)</button>
                    </form>
                </div>
            </div>

            <!-- Register Form -->
            <div class="tab-pane fade" id="register">
                <div class="card p-4">
                    <form action="/register" method="POST">
                        <div class="mb-3">
                            <label>Full Name</label>
                            <input type="text" name="name" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label>Email</label>
                            <input type="email" name="email" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label>Phone</label>
                            <input type="text" name="phone" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label>Password</label>
                            <input type="password" name="password" class="form-control" required>
                        </div>
                        <button type="submit" class="btn btn-success w-100">Register New User</button>
                    </form>
                </div>
            </div>

            <!-- Update Profile Form (User Request) -->
            <div class="tab-pane fade" id="profile">
                <div class="card p-4">
                    <div class="alert alert-info">Enter User ID and details to update. Leave blank to keep existing.</div>
                    <form action="/profile/update" method="POST">
                        <div class="mb-3">
                            <label class="fw-bold">User ID (Required)</label>
                            <input type="number" name="user_id" class="form-control" required placeholder="Enter your User ID">
                        </div>
                        <div class="mb-3">
                            <label>New Name</label>
                            <input type="text" name="name" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label>New Phone</label>
                            <input type="text" name="phone" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label>New Password</label>
                            <input type="password" name="password" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label>New Avatar URL</label>
                            <input type="text" name="avatar" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-warning w-100">Update Profile</button>
                    </form>
                </div>
            </div>
        </div>

        <% if (typeof userId !== 'undefined') { %>
            <div class="alert alert-success mt-4 text-center">
                <h4>üéâ Operation Successful!</h4>
                
                <% if (typeof userName !== 'undefined' && userName) { %>
                    <!-- Full Profile Display (from Login) -->
                    <div class="text-start mb-3">
                        <% if (typeof userAvatar !== 'undefined' && userAvatar) { %>
                            <div class="text-center mb-3">
                                <img src="<%= userAvatar %>" alt="Avatar" class="rounded-circle" style="width: 80px; height: 80px; object-fit: cover;">
                            </div>
                        <% } %>
                        <table class="table table-bordered">
                            <tr><th>User ID</th><td><strong class="text-danger"><%= userId %></strong></td></tr>
                            <tr><th>Name</th><td><%= userName %></td></tr>
                            <tr><th>Email</th><td><%= userEmail %></td></tr>
                            <tr><th>Role</th><td><span class="badge <%= userRole === 'ADMIN' ? 'bg-danger' : 'bg-primary' %>"><%= userRole %></span></td></tr>
                        </table>
                    </div>
                <% } else { %>
                    <!-- Simple ID Display (from Register) -->
                    <p>Your User ID is:</p>
                    <h1 class="display-3 fw-bold text-danger"><%= userId %></h1>
                <% } %>
                
                <p>‚ö†Ô∏è Copy this ID to use in Cart actions.</p>
                <div class="d-grid gap-2">
                    <a href="/products" class="btn btn-outline-dark">Go to Products</a>
                    <a href="/cart?user_id=<%= userId %>" class="btn btn-outline-dark">Go to Cart</a>
                    <a href="/addresses?user_id=<%= userId %>" class="btn btn-outline-secondary">My Addresses</a>
                    <a href="/orders?user_id=<%= userId %>" class="btn btn-outline-secondary">My Orders</a>
                </div>
            </div>
        <% } %>
    </div>
</div>
